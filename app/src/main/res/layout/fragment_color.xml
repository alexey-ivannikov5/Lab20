<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ColorFragment">

    <TextView
        android:id="@+id/tv_color_hex_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"


        android:text="@string/color_not_selected"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/bt_get_contacts"
        app:layout_constraintEnd_toEndOf="parent"

        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:layout_margin="8dp"
        android:id="@+id/bt_get_contacts"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Показать уведомление"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>